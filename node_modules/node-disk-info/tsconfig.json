{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "newLine": "LF",
    "lib": [
      "es2017"
    ],
    "types": [
      "jasmine",
      "node"
    ],
    "moduleResolution": "node",
    "importHelpers": false,
    "declaration": true,
    "pretty": true,
    "sourceMap": true,
    "inlineSources": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "stripInternal": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "es",
    "**/*.spec.ts",
    "lib"
  ]
}
